<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit post <%=post.title%></h1>
        <div style=" width:30%; margin:30px auto">
            <form action="/posts/<%=post._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Title</label>
                    <input class="form-control" type="text" name="post[title]" value="<%=post.title%>">
                </div>
                <div class="form-group">
                    <label>Image:</label>
                    <input class="form-control" type="text" name="post[image]" value="<%=post.image%>">
                </div>
                <div class="form-group">
                <label for="exampleFormControlTextarea1" value="<%=post.description%>">Description</label>
                <textarea class="form-control" name="post[description]" rows="3"></textarea>
                  </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/posts">Back to posts</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>