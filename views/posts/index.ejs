<% include ../partials/header %>
<div class="container">
     <div class="jumbotron jumbo">
      <h1 class="display-4">App2Kids</h1>
      <p class="lead"></p>
      <hr class="my-4">
      <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
      <p class="lead">
        <a class="btn btn-primary btn-lg" href="/posts/new" role="button">Add a new post</a>
      </p>
    </div>
    <div class="label-text">Latest news</div>
        <hr>
        <div class="row">
            <div class="col-md-9 ">
              <% for(var i=0;i<posts.length;i++){ %>
             <div class="row">
               
                <div class="col-md-3">
                  <a href="#">
                  <a href="/posts/<%=posts[i]._id%>"><img class="img-fluid rounded mb-3 mb-md-0" id="article-img" src="<%= posts[i].image[0] %>"></a>
                  </a>
                 </div>
                 <div class="col-md-9">
                       <a href="/posts/<%=posts[i]._id%>"><h2 class="mt-0 art-title"><%=posts[i].title%></h2></a>
                       <small>Posted at <%=posts[i].created.toString().slice(0,10).replace(/-/g,"")%></small>
                      <p class="lead"><%=posts[i].shortDescription%>...<a href="/posts/<%=posts[i]._id%>" id="more-info" class="btn btn-primay">More info</a></p>
                  
                  </div>
                  <% if (i%5==0 && i!=0){ %>
                    <div class="col-md-6 postcard">
             <div class=" card bg-dark text-white">
                  <img class="card-img" src="<%=posts[0].image[1]%>" alt="Card image">
                     <div class="card-img-overlay">
                        <h5 class="card-title"><%=posts[0].title%></h5>
                    </div>
            </div>
        </div> 
        <div class="col-md-6 postcard">
             <div class="card bg-dark text-white">
                  <img class="card-img" src="<%=posts[1].image[1]%>" alt="Card image">
                   <div class="card-img-overlay">
                      <h5 class="card-title">Card title</h5>
                          <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                         
                  </div>
            </div>
        </div>
        <% } %>
             </div>
              <hr>
               <% } %>
             </div>
               
            
        
            <div class="col-md-3">
          <!-- Search Widget -->
          <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                  <button class="btn btn-secondary" type="button">Go!</button>
                </span>
              </div>
            </div>
          </div>

          <!-- Categories Widget -->
          <div class="card my-4">
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
              <div class="row">
                <div class="col-lg-6">
                  <ul class="list-unstyled mb-0">
                    <li>
                      <a href="#">Web Design</a>
                    </li>
                    <li>
                      <a href="#">HTML</a>
                    </li>
                    <li>
                      <a href="#">Freebies</a>
                    </li>
                  </ul>
                </div>
                <div class="col-lg-6">
                  <ul class="list-unstyled mb-0">
                    <li>
                      <a href="#">JavaScript</a>
                    </li>
                    <li>
                      <a href="#">CSS</a>
                    </li>
                    <li>
                      <a href="#">Tutorials</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          <!-- Side Widget -->
          <div class="card my-4">
            <h5 class="card-header">Side Widget</h5>
            <div class="card-body">
              You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
            </div>
          </div>

        </div>

       </div>
            </div>
      </div>

<% include ../partials/footer %>